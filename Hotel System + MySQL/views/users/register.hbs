<div class="row">
    <div class="col-xs-12 col-sm-12 col-sm-offset-0 col-md-6 col-md-offset-4 col-lg-6 col-lg-offset-12">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" id="username" name="username" value="{{inputUsername}}"><br>

                <label for="password">Password:</label>
                <input class="form-control {{inputError}}" type="password" id="password" name="password"><br>

                <label for="rePassword">Repeat password:</label>
                <input class="form-control {{inputError}}" type="password" id="rePassword" name="rePassword"><br>

                <label for="firstName">First name:</label>
                <input class="form-control" type="text" id="firstName" name="firstName" value="{{inputFirstName}}"><br>

                <label for="lastName">Last name:</label>
                <input class="form-control" type="text" id="lastName" name="lastName" value="{{inputLastName}}"><br>
            </div>
            <div class="form-group">
                <input  class="btn btn-success" type="submit" value="Register">
            </div>
        </form>
    </div>
</div>