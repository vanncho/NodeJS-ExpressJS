{{#if hotels}}
    {{#each hotels}}
        <div>
            <p>{{this.title}}</p>
            <p>{{this.location}}</p>
            <a href="/hotel/details/{{this.id}}">
                <img class="hotel-image-list" src="{{this.image_url}}" alt="hotel image">
            </a>
            <p>{{this.description}}</p>
        </div>
        <br>
    {{/each}}
{{else}}
    <h1>No hotels available.</h1>
{{/if}}